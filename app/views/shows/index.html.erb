<%= link_to 'Agregar serie', new_show_path, class:"btn btn-primary" %>
<h1>Listado Series</h1>

<% @shows.each do |show| %>
  <div class="row">
    <h3><%= show.titulo %></h3> 
    <div class="col-xm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag(show.imagen) %>
      </div>
    </div>
    <div class="col-xm-6 col-md-8" id= lista_serie_descripcion>
         <div class="caption">
            <p><%= show.descripcion %></p>
            <p><%= link_to 'Show', show,class:'btn btn-primary' %>
            
            <%= link_to 'Edit', edit_show_path(show),class:"btn btn-default" %>
            <%= link_to 'Destroy', show, method: :delete, class:"btn btn-default",data: { confirm: 'Are you sure?' } %>
            </p>
        </div>
    </div>        
  </div>
<% end %>


